{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "arrow-spacing": [
          "error", {"before": true, "after": true}
        ],
        "object-curly-spacing": [
          "error", "always"
        ],
        "eqeqeq": "error",
        "no-trailing-spaces": "error",
        "no-unused-vars": 0,
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
